#import "BuffConfig.h"

@implementation BuffDef

@end

@implementation BuffConfig
static BuffConfig * _buffConfig = nil;

+(BuffConfig *)share
{
    if (_buffConfig == nil)
    {
        _buffConfig = [[BuffConfig alloc]init];
    }
    return _buffConfig;
}

-(void)dealloc
{
    Definitions = nil;
}

-(void)reset
{
    [super reset];
    Definitions = nil;
}
//
// 重载了父类的方法
//
-(void)initWithString:(NSString *)buffer
{
    NSMutableArray *rows = (NSMutableArray *)[buffer componentsSeparatedByString:@"\r\n"];
    for (int k=1; k<[rows count]-1; k++)
    {
        NSMutableArray *cols = (NSMutableArray *)[[rows objectAtIndex:k] componentsSeparatedByString:@"\t"];
        BuffDef *def = [[BuffDef alloc]init];
        
        int i=0;
        def.buffId      = [[cols objectAtIndex:i++] integerValue];
        def.buffName    = [cols objectAtIndex:i++];
        def.buffDesc    = [cols objectAtIndex:i++];
        def.buffIcon    = [cols objectAtIndex:i++];
        def.buffType    = [[cols objectAtIndex:i++] integerValue];
        def.attriId     = [[cols objectAtIndex:i++] integerValue];
        def.attriNum    = [[cols objectAtIndex:i++] integerValue];
        def.buffMultiLimit  = [[cols objectAtIndex:i++] integerValue];
        def.bTimeType   = [[cols objectAtIndex:i++] integerValue];
        def.instantEffect   = [[cols objectAtIndex:i++] integerValue];
        def.effectHappen    = [[cols objectAtIndex:i++] integerValue];
        def.buffLast    = [[cols objectAtIndex:i++] integerValue];
        def.buffTurn    = [[cols objectAtIndex:i++] integerValue];
        def.buffNewGet  = [[cols objectAtIndex:i++] integerValue];
        def.buffNewChance   = [[cols objectAtIndex:i++] integerValue];
        def.buffNewId  = [[cols objectAtIndex:i++] integerValue];
        def.logFontSize = [[cols objectAtIndex:i++] integerValue];
        
        int r,g,b;
        r = [[cols objectAtIndex:i++] intValue];
        g = [[cols objectAtIndex:i++] intValue];
        b = [[cols objectAtIndex:i++] intValue];
        def.logFontColor = [UIColor colorWithRed:r/255.0f green:g/255.0f blue:b/255.0f alpha:1.0f];
        
        def.animaFontSize = [[cols objectAtIndex:i++] integerValue];
        
        r = [[cols objectAtIndex:i++] intValue];
        g = [[cols objectAtIndex:i++] intValue];
        b = [[cols objectAtIndex:i++] intValue];
        
        def.animaFontColor = [UIColor colorWithRed:r/255.0f green:g/255.0f blue:b/255.0f alpha:1.0f];

        [self addRow:def];
    }
}

//
// 重载了父类的方法
//
-(void)loadDBFromLocal
{
    Definitions = [[NSMutableDictionary alloc]init];
    for (int i=0; i<[self numOfRow]; i++)
    {
        BuffDef *def = [self rowAtIndex:i];
        [Definitions setObject:def forKey:[NSString stringWithFormat:@"%lu",def.buffId]];
        def =nil;
    }
}

-(BuffDef*) getBuffDefWithId:(NSNumber*)bid
{
    BuffDef *def = [Definitions objectForKey:[bid stringValue]];
    return def;
}
@end
