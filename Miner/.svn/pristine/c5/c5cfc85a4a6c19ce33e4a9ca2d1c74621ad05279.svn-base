//
// 往数组中添加一个元素
//
- (void)addRow:(id)rowData
{
	[_DB addObject:rowData];
}

//
// 根据数组下标删除数组中的对应元素
//
- (void)deleteRow:(int)index
{
	if (index >= 0 && index < [_DB count] )
		[_DB removeObjectAtIndex:index];
}

//
// 返回数组元素总数
// 也可视为该文件内的数据行数
//
- (int)numOfRow
{
	return (int)[_DB count];
}

//
// 根据数组下标来获取数组元素
//
- (id)rowAtIndex:(int)index
{
	if (index >= 0 && index < [_DB count] )
		return [_DB objectAtIndex:index];
	
	return nil;
}

